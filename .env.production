# Production Environment Variables
# Copy this file to .env.local for local development
# For production, set these in your hosting platform (Vercel, etc.)

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/prism_writing_prod"

# Next.js Configuration
NEXT_PUBLIC_SITE_URL="https://prismwriting.com"
NEXTAUTH_URL="https://prismwriting.com"
NEXTAUTH_SECRET="your-super-secret-nextauth-secret-key-here"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@prismwriting.com"
SMTP_PASS="your-app-password"
CONTACT_EMAIL="contact@prismwriting.com"

# Authentication Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY="pk_live_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Analytics
VERCEL_ANALYTICS_ID="your-analytics-id"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Security
SESSION_SECRET="your-session-secret-key"
ENCRYPTION_KEY="your-encryption-key-32-characters"

# File Upload (if using cloud storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="prism-writing-uploads"
AWS_REGION="us-east-1"

# Redis (for caching - optional)
REDIS_URL="redis://localhost:6379"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_PAYMENTS="true"
ENABLE_NOTIFICATIONS="true"

# Development/Production Mode
NODE_ENV="production"
