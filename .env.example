# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=contact@prismwriting.com

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (configure in Stripe dashboard)
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly

# Vercel Speed Insights (optional)
VERCEL_ANALYTICS_ID=your-analytics-id

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=https://prismwriting.com

# Database (for future features)
# DATABASE_URL=your-database-url

# Deployment
VERCEL_URL=prismwriting.com

# Video Processing Configuration
# AWS S3 for video storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=prism-writing-videos

# OpenAI for transcription and content analysis
OPENAI_API_KEY=sk-your_openai_api_key

# Video processing settings
MAX_VIDEO_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,webm
