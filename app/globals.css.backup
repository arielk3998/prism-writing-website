@layer utilities {
  /* ============================================================================ */
  /* CUSTOM KEYFRAMES */
  /* ============================================================================ */
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideInFromBottom {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  @keyframes slideInFromTop {
    from { 
      opacity: 0; 
      transform: translateY(-20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  @keyframes slideInFromLeft {
    from { 
      opacity: 0; 
      transform: translateX(-20px); 
    }
    to { 
      opacity: 1; 
      transform: translateX(0); 
    }
  }

  @keyframes slideInFromRight {
    from { 
      opacity: 0; 
      transform: translateX(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateX(0); 
    }
  }

  @keyframes scaleIn {
    from { 
      opacity: 0; 
      transform: scale(0.95); 
    }
    to { 
      opacity: 1; 
      transform: scale(1); 
    }
  }

  @keyframes bounceIn {
    0% {
      opacity: 0;
      transform: scale(0.3);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
    70% {
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* ============================================================================ */
  /* ENHANCED ANIMATION UTILITIES */
  /* ============================================================================ */
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-pulse-glow {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  .animate-shimmer {
    animation: shimmer 2s ease-in-out infinite;
  }

  .animate-gradient {
    animation: gradient-shift 3s ease infinite;
    background-size: 200% 200%;
  }

  /* ============================================================================ */
  /* INTERACTION UTILITIES */
  /* ============================================================================ */
  
  .hover-lift {
    transition: transform var(--animation-duration-normal) var(--animation-easing-ease-in-out);
  }

  .hover-lift:hover {
    transform: translateY(-4px);
  }

  .hover-glow {
    transition: box-shadow var(--animation-duration-normal) var(--animation-easing-ease-in-out);
  }

  .hover-glow:hover {
    box-shadow: var(--shadow-lg), 0 0 20px rgb(var(--primary) / 0.25);
  }

  .hover-scale {
    transition: transform var(--animation-duration-normal) var(--animation-easing-ease-in-out);
  }

  .hover-scale:hover {
    transform: scale(1.05);
  }

  .hover-rotate {
    transition: transform var(--animation-duration-normal) var(--animation-easing-ease-in-out);
  }

  .hover-rotate:hover {
    transform: rotate(3deg);
  }

  /* ============================================================================ */
  /* BORDER UTILITIES */
  /* ============================================================================ */
  
  .border-gradient {
    position: relative;
  }

  .border-gradient::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(to right, rgb(var(--primary)), rgb(139 69 199));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: source-out;
    mask-composite: exclude;
    z-index: -1;
  }

  /* ============================================================================ */
  /* GLASS MORPHISM UTILITIES */
  /* ============================================================================ */
  
  .glass-light {
    background-color: rgb(255 255 255 / 0.1);
    backdrop-filter: blur(16px);
    border: 1px solid rgb(255 255 255 / 0.2);
  }

  .glass-dark {
    background-color: rgb(0 0 0 / 0.1);
    backdrop-filter: blur(16px);
    border: 1px solid rgb(0 0 0 / 0.2);
  }

  /* ============================================================================ */
  /* ACCESSIBILITY UTILITIES */
  /* ============================================================================ */
  
  /* Screen reader only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Focus management */
  .focus-visible {
    outline: none;
  }

  .focus-visible:focus-visible {
    box-shadow: 0 0 0 2px rgb(var(--ring)), 0 0 0 4px rgb(var(--background));
  }

  /* ============================================================================ */
  /* PRINT UTILITIES */
  /* ============================================================================ */
  
  @media print {
    .print-hidden {
      display: none !important;
    }
    
    .print-block {
      display: block !important;
    }
    
    .print-break-before {
      break-before: page;
    }
    
    .print-break-after {
      break-after: page;
    }
    
    .print-break-inside-avoid {
      break-inside: avoid;
    }
  }

  /* ============================================================================ */
  /* REDUCED MOTION UTILITIES */
  /* ============================================================================ */
  
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* ============================================================================ */
  /* DOCUMENT EXPORT UTILITIES */
  /* ============================================================================ */
  
  /* Styles for document export compatibility */
  .export-heading-1 {
    font-family: var(--font-display);
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    margin-bottom: var(--spacing-6);
    color: rgb(var(--foreground));
  }

  .export-heading-2 {
    font-family: var(--font-display);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    margin-bottom: var(--spacing-5);
    color: rgb(var(--foreground));
  }

  .export-heading-3 {
    font-family: var(--font-display);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-snug);
    margin-bottom: var(--spacing-4);
    color: rgb(var(--foreground));
  }

  .export-body {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-4);
